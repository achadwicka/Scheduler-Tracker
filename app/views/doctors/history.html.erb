<script>
$(document).ready(function(){
  $('.toast').toast('show');
});
</script>
<center>

<h2> Historial de reservas</h2>
<div class='container'>
	<table class="table table-bordered">
	<thead>
		<tr>
			<th> Fecha </th>
			<th> Hora </th>
			<th> Cliente </th>
			<th> Ver reserva </th>
		</tr>
	</thead>
	<tbody>
		<% @relation.each do |relation| %>
			<% if relation['doctor'] = current_doctor  %>
				<tr>
					<% @reserva = Reservation.find(relation['id'])%>
					<td><%= relation['fecha'] %> </td>
					<td><%= relation['hora'] %></td>
					<td><%= relation['first_name'] +  ' ' + relation['last_name'] %></td>
					<td><%= link_to 'Ir', @reserva %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
	</table>

	
</div>


</center>