
<center>
<div class="card" style="width:400px; margin-top:50px;">
  <div class="card-body">
    <h4 class="card-title">Crear Cuenta de Doctor</h4>

      <%= form_for Doctor.new , :url => {:action => "add_doc"} do |f| %>
        
        <div class="field">
          <%= f.label :cel_number %><br />
          <%= f.telephone_field :cel_number, autofocus: true, autocomplete: "cel_number" %>
        </div>
        
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "First Name" %>
        </div>

        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "Last Name" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Create" %>
        </div>
      <% end %>
    </div>
</div>
</center>
