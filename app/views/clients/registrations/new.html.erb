<center>
<div class="card" style="width:400px; margin-top:50px;">
  <div class="card-body">
    <h4 class="card-title">Crea Tu Cuenta</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>


        <div class="field">
          <%= f.label :first_name, "Nombre" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "email", placeholder: "Nombre" %>
        </div>

        <div class="field">
          <%= f.label :last_name, "Apellido" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email", placeholder: "Apellido" %>
        </div>

        <div class="field">
          <%= f.label :email, "Correo" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "correo", required: true %>
        </div>

        <div class="field">
          <%= f.label :rut %>
          <%= f.text_field :rut, autocomplete: "rut", placeholder: "Sin puntos ni rayas" %>
        </div>

        <div class="field">
          <%= f.label :cel_number, "Celular" %>
          <%= f.text_field :cel_number, autocomplete: "cel_number", placeholder: "Ingrese código de área", required: true %>
        </div>

        <div class="field">
          <%= f.label :birth_date, "Fecha de nacimiento" %>
          <%= f.date_field :birth_date, autocomplete: "cel_number", placeholder: "" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "contraseña", required: true %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirme contraseña" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "contraseña", required: true %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "clients/shared/links" %>

  </div>
</div>
</center>
